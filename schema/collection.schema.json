{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/juanisidoro/firestore-schema-viewer/main/schema/collection.schema.json",
  "title": "Firestore Collection Schema",
  "description": "Schema definition for a Firestore collection, used by firestore-schema-viewer.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this meta-schema for IDE validation"
    },
    "collection": {
      "type": "string",
      "description": "Collection name (e.g. 'users', 'orders')"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the collection"
    },
    "documentCount": {
      "type": "integer",
      "description": "Approximate number of documents in the collection",
      "minimum": 0
    },
    "schema": {
      "type": "object",
      "description": "JSON Schema (draft 2020-12) defining the document structure",
      "properties": {
        "$schema": { "type": "string" },
        "$id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "type": { "type": "string", "const": "object" },
        "properties": { "type": "object" },
        "required": { "type": "array", "items": { "type": "string" } },
        "additionalProperties": { "type": "boolean" }
      },
      "required": ["type", "properties"]
    }
  },
  "required": ["collection", "schema"],
  "additionalProperties": false
}
